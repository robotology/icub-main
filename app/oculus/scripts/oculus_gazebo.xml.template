</dependencies> 
<module>
  <name>camCalibWithPose</name>
  <parameters>--context cameraCalibration --from icubSimEyes.ini --group CAMERA_CALIBRATION_LEFT --name /icubGazeboSim/camcalibPose/left</parameters>
  <node>/ciao</node>
</module>
<module>
  <name>camCalibWithPose</name>
  <parameters>--context cameraCalibration --from icubSimEyes.ini --group CAMERA_CALIBRATION_RIGHT --name /icubGazeboSim/camcalibPose/right</parameters>
  <node>/ciao</node>
</module>
