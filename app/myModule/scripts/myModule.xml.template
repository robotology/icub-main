<application>
<name>Test myModule</name>

<dependencies>
   <port>/icub/cam/left</port>
</dependencies>

<module>
   <name>myModule</name>
   <parameters>--threshold 128</parameters>
   <node>icub1</node>
   <tag>myModule</tag>
</module>

<module>
   <name>yarpview</name>
   <parameters>--name /rgbImage --x 000 --y 0 --synch</parameters>
   <node>icub1</node>
   <tag>left_image</tag>
</module>

<module>
   <name>yarpview</name>
   <parameters>--name /binaryImage --x 350 --y 0 --synch</parameters>
   <node>icub1</node>
   <tag>right_image</tag>
</module>

<connection>
  <from>/icub/cam/left</from>
  <to>/myModule/image:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/icub/cam/left</from>
  <to>/rgbImage</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/myModule/image:o</from>
  <to>/binaryImage</to>
  <protocol>tcp</protocol>
</connection>

</application>