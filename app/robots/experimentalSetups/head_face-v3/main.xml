<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE robot PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

<robot name="iCubExpHeadV3" build="1" portprefix="icub">

    <!-- HEAD-FACE-V3 -->
    
    <!-- MOTOR CONTROLLERS -->
    
    <!-- face motor controller. there are two board/devices: face0 and face1 -->
    <devices file="./hardware/motorControl/face0_mc_hardware.xml" /> 
    <devices file="./hardware/motorControl/face1_mc_hardware.xml" /> 
    <devices file="./wrappers/motorControl/face_mc_wrapper.xml" /> 

    <!-- head motor controller. there are two board/devices: head0 and head1 -->
    <devices file="./hardware/motorControl/head0_mc_hardware.xml" />  
    <devices file="./hardware/motorControl/head1_mc_hardware.xml" /> 
    <devices file="./wrappers/motorControl/head_mc_wrapper.xml" /> 

   <devices file="hardware/inertial.xml" />

    <!-- CALIBRATORS -->
    
    <!-- face calibrator -->
    <devices file="./calibrators/face_calib.xml" />
    
    <!-- head calibrator -->
    <devices file="./calibrators/head_calib.xml" />
    
</robot> 

