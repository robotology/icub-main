            <param name="target">torso_mc_wrapper</param>              
        </action>            
 
        <action phase="interrupt3" level="1" type="abort" />           
 
    </device>  
</devices>     
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
