<param name="maxPwm">                     0             0             0             0             0             0             0             0             </param>       
<param name="posZeroThreshold">           90            90            90            90            90            90            90            90            </param>       
</group>       
 
<group name="HOME">          
<param name="positionHome"> 90            3             0             0             0             0             0             0             </param>       
